                            HorizontalAlignment="Right" 
                            VerticalAlignment="Top"  
                            Command="{Binding GoForwardCommand}">
                        <Button.Style>
                            <Style TargetType="Button" >
                                <Setter Property="Focusable" Value="False"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            
