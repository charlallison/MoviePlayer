<Window x:Class="Movies.SplashScreenWindow"
        Style="{StaticResource CustomWindowStyle}"
        Background="{StaticResource ImageBackground}"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Splash" Height="120" Width="361" WindowStyle="None" SnapsToDevicePixels="True" Topmost="True" ShowInTaskbar="False"
        AllowsTransparency="True" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Border   BorderThickness="5" 
            BorderBrush="DarkOrange">
        <Border Background="{StaticResource ImageBackground}">
            <DockPanel  Margin="4">
                <Image Source="/VirtualizingListView;component/Resources/Images/video-player.png" 
                   Grid.Row="0" Width="50" Grid.Column="0" IsEnabled="False" />
                <TextBlock Text=" Movies" HorizontalAlignment="Center"
                       VerticalAlignment="Center" Width="292" 
                       FontFamily="Comic Sans MS" 
                       FontSize="60" FontWeight="Bold" Foreground="White" Background="{x:Null}"
                       Grid.ColumnSpan="2" Height="85" Margin="0,0,0,5"   />
            </DockPanel>
        </Border>

    </Border>
</Window>
