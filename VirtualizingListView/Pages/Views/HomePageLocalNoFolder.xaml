<UserControl x:Class="VirtualizingListView.Pages.HomePageLocalNoFolder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VirtualizingListView.Pages"
      xmlns:localmodel="clr-namespace:VirtualizingListView.Pages.Model"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300" Background="{DynamicResource Theme.Background}">

    <Grid TextBlock.Foreground="{DynamicResource Theme.Foreground}" VerticalAlignment="Center">
        <StackPanel >
            <TextBlock TextAlignment="Center" FontSize="18" Text="This is where you 'll see your personal videos."/>
            <TextBlock TextAlignment="Center" Text="Have Videos on your PC? Tell us where they are!"/>
            <Button Background="{DynamicResource Theme.HighlightColor}" 
                    BorderBrush="{DynamicResource Theme.HighlightColor}" 
                    Foreground="{DynamicResource Theme.Foreground}" Content="Add a folder" Margin="0,10,0,0" Width="120" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
